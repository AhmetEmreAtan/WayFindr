<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_bg_desing">


    <LinearLayout
        android:id="@+id/places_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp">

        <TextView
            android:id="@+id/pageDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="Detaylar"
            android:textColor="@color/navy"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/placesImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/placesImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/kizkulesi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/placesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="Place Name"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placesImage" />

        <ScrollView
            android:id="@+id/places_info_scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placesName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/placesDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font2"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>


        <TextView
            android:id="@+id/placesAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="Place Address"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/placesOpeningHours"
            app:layout_constraintEnd_toEndOf="@+id/places_info_scroll"
            app:layout_constraintStart_toStartOf="@+id/places_info_scroll"
            app:layout_constraintTop_toBottomOf="@+id/places_info_scroll" />


        <TextView
            android:id="@+id/placesOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="Place Openning Hours"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/placesPrice"
            app:layout_constraintEnd_toEndOf="@+id/placesAddress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/placesAddress"
            app:layout_constraintTop_toBottomOf="@+id/placesAddress" />

        <TextView
            android:id="@+id/placesPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/font2"
            android:text="Place Price"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/gitbtn"
            app:layout_constraintEnd_toEndOf="@+id/placesOpeningHours"
            app:layout_constraintStart_toStartOf="@+id/placesOpeningHours"
            app:layout_constraintTop_toBottomOf="@+id/placesOpeningHours" />


        <Button
            android:id="@+id/gitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/font2"
            android:text="Git"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/commentCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/placesAddress" />


        <androidx.cardview.widget.CardView
            android:id="@+id/commentCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gitbtn"
            android:background="@color/begie">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <MultiAutoCompleteTextView
                    android:id="@+id/commentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Yorumunuz"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/commentSend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    android:text="GÃ¶nder" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commentCardView"
            app:layout_constraintBottom_toTopOf="parent"
            tools:itemCount="5"
            tools:listitem="@layout/item_comment"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>