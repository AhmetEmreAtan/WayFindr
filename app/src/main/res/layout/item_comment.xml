<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/begie"
        android:backgroundTint="@color/begie"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/begie"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/begie"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commentProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilephotoicon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/begie"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/commentUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        tools:text="Kadersu" />

                    <TextView
                        android:id="@+id/commentUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8dp"
                        tools:text="kadersutlu" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Herkesin gÃ¶rmesi gereken bir mekan :D" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>