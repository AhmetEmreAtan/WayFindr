<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment_FL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vintage_grey"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/homepage_bg">

                        <ImageView
                            android:id="@+id/profilepicture"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/category_button_shape"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/notification_settings_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/baseline_notifications_24"
                            app:layout_constraintEnd_toStartOf="@+id/messaging_button"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/messaging_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/baseline_message_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/City_Select_Button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/spinner_design"
                            android:fontFamily="@font/font2"
                            android:gravity="center"
                            android:text="İstanbul"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/messaging_button"
                            app:layout_constraintStart_toEndOf="@+id/profilepicture"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/homepage_hitext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:text="Hi "
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/City_Select_Button" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Let's explore the places around"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/homepage_hitext" />

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/searchView"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/spinner_border"
                            android:iconifiedByDefault="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/categoriesCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    app:layout_constraintTop_toBottomOf="@+id/profileCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/vintage_grey"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView">

                        <ImageButton
                            android:id="@+id/category1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="24dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsmall"
                            app:layout_constraintEnd_toStartOf="@+id/category2"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/Category1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVM"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category1"
                            app:layout_constraintStart_toStartOf="@+id/category1"
                            app:layout_constraintTop_toBottomOf="@+id/category1" />

                        <ImageButton
                            android:id="@+id/category2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconspray"
                            app:layout_constraintEnd_toStartOf="@+id/category3"
                            app:layout_constraintStart_toEndOf="@+id/category1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/gradient" />

                        <TextView
                            android:id="@+id/Category2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dini"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category2"
                            app:layout_constraintStart_toStartOf="@+id/category2"
                            app:layout_constraintTop_toBottomOf="@+id/category2" />

                        <ImageButton
                            android:id="@+id/category3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsforest"
                            app:layout_constraintEnd_toStartOf="@+id/Category4"
                            app:layout_constraintStart_toEndOf="@+id/category2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/Category3_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doğa"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category3"
                            app:layout_constraintStart_toStartOf="@+id/category3"
                            app:layout_constraintTop_toBottomOf="@+id/category3" />


                        <ImageButton
                            android:id="@+id/Category4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsthemepark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/category3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/navy" />

                        <TextView
                            android:id="@+id/Category4_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eğlence"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/Category4"
                            app:layout_constraintStart_toStartOf="@+id/Category4"
                            app:layout_constraintTop_toBottomOf="@+id/Category4" />


                        <ImageButton
                            android:id="@+id/category5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconscafe40"
                            app:layout_constraintEnd_toStartOf="@+id/category6"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Category1_title"
                            app:tint="@color/light_blue_600" />

                        <TextView
                            android:id="@+id/Category5_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kafe"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category5"
                            app:layout_constraintStart_toStartOf="@+id/category5"
                            app:layout_constraintTop_toBottomOf="@+id/category5" />


                        <ImageButton
                            android:id="@+id/category6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsmuseum"
                            app:layout_constraintEnd_toStartOf="@+id/category7"
                            app:layout_constraintStart_toEndOf="@+id/category5"
                            app:layout_constraintTop_toBottomOf="@+id/Category2_title"
                            app:tint="@color/maroon" />

                        <TextView
                            android:id="@+id/Category6_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Müze"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category6"
                            app:layout_constraintStart_toStartOf="@+id/category6"
                            app:layout_constraintTop_toBottomOf="@+id/category6" />


                        <ImageButton
                            android:id="@+id/category7"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsrestaurant"
                            app:layout_constraintEnd_toStartOf="@+id/Category8"
                            app:layout_constraintStart_toEndOf="@+id/category6"
                            app:layout_constraintTop_toBottomOf="@+id/Category3_title" />

                        <TextView
                            android:id="@+id/Category7_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restoran"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/category7"
                            app:layout_constraintStart_toStartOf="@+id/category7"
                            app:layout_constraintTop_toBottomOf="@+id/category7" />


                        <ImageButton
                            android:id="@+id/Category8"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/category_button_shape"
                            android:src="@drawable/iconsellipsis"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/category7"
                            app:layout_constraintTop_toBottomOf="@+id/Category4_title" />

                        <TextView
                            android:id="@+id/Category8_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/Category8"
                            app:layout_constraintStart_toStartOf="@+id/Category8"
                            app:layout_constraintTop_toBottomOf="@+id/Category8" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/font2"
                    android:text="@string/fragment_home_popular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categoriesCardview" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/popular_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewPopular"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/white"
                        tools:listitem="@layout/item_popular" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/font2"
                    android:text="Events"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/popular_cardView" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/events_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="50dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewEvents">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        tools:listitem="@layout/item_event" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFiltered"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>