<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Where do you want you go?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Explore Now"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchView" />

                <HorizontalScrollView
                    android:id="@+id/kat_scroll_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/navy">

                                <ImageView
                                    android:id="@+id/antropoloji_img"
                                    android:layout_width="150dp"
                                    android:layout_height="270dp"
                                    android:background="@drawable/ant_image" />

                                <TextView
                                    android:id="@+id/antropoloji_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Antropoloji"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/grey"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/navy">

                                <ImageView
                                    android:id="@+id/BE_image"
                                    android:layout_width="150dp"
                                    android:layout_height="270dp"
                                    android:background="@drawable/islam_bilim_image" />

                                <TextView
                                    android:id="@+id/BE_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bilim ve Endüstri"
                                    android:textAlignment="center"
                                    android:textColor="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/navy">

                                <ImageView
                                    android:id="@+id/ozel_image"
                                    android:layout_width="150dp"
                                    android:layout_height="270dp"
                                    android:background="@drawable/ural_ataman_image" />

                                <TextView
                                    android:id="@+id/ozel_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Özel Müzeler"
                                    android:textAlignment="center"
                                    android:textColor="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/navy">

                                <ImageView
                                    android:id="@+id/sanat_image"
                                    android:layout_width="150dp"
                                    android:layout_height="270dp"
                                    android:background="@drawable/istanbul_modern_image" />

                                <TextView
                                    android:id="@+id/sanat_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sanat Müzeleri"
                                    android:textAlignment="center"
                                    android:textColor="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/navy">

                                <ImageView
                                    android:id="@+id/tarih_image"
                                    android:layout_width="150dp"
                                    android:layout_height="270dp"
                                    android:background="@drawable/topkapi_sarayi" />

                                <TextView
                                    android:id="@+id/tarih_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tarih Müzeleri"
                                    android:textAlignment="center"
                                    android:textColor="@color/grey"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>