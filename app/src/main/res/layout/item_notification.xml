<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/notificationProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="14dp"
            android:text="Arkadaşlık isteği"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/notificationProfileImage"
            app:layout_constraintEnd_toStartOf="@+id/acceptButton"
            app:layout_constraintStart_toEndOf="@id/notificationProfileImage"
            app:layout_constraintTop_toTopOf="@+id/notificationProfileImage" />

        <ImageButton
            android:id="@+id/acceptButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/floating_button"
            android:src="@drawable/baseline_check_24"
            app:layout_constraintBottom_toBottomOf="@+id/notificationText"
            app:layout_constraintEnd_toStartOf="@+id/rejectButton"
            app:layout_constraintTop_toTopOf="@+id/notificationText" />

        <ImageButton
            android:id="@+id/rejectButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/floating_button"
            android:src="@drawable/baseline_close"
            app:layout_constraintBottom_toBottomOf="@+id/acceptButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/acceptButton"
            app:tint="@color/red" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
